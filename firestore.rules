rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // Posts collection: allow public read access, authenticated write access
    match /posts/{document=**} {
      allow read: if true; // Public can read all posts
      allow write: if request.auth != null; // Only authenticated users can write
    }
    
    // Events collection: allow public read access, authenticated write access
    match /events/{document=**} {
      allow read: if true; // Public can read all events
      allow write: if request.auth != null; // Only authenticated users can write
    }
    
    // Team collection: allow public read access, authenticated write access
    match /team/{document=**} {
      allow read: if true; // Public can read team members
      allow write: if request.auth != null; // Only authenticated users can write
    }
    
    // Settings collection: allow all authenticated users to read and write
    match /settings/{document=**} {
      allow read, write: if request.auth != null;
    }
    
    // Media collection: allow all authenticated users to read and write
    match /media/{document=**} {
      allow read, write: if request.auth != null;
    }
    
    // Default rule: all other collections require authentication
    match /{document=**} {
      allow read, write: if request.auth != null;
    }
  }
}
