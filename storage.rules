rules_version = '2';

service firebase.storage {
  match /b/{bucket}/o {
    // Default rule - deny all access
    match /{allPaths=**} {
      // Allow read access to all files (public read)
      allow read: if true;
      
      // Allow admin users to write any file
      allow write: if request.auth != null;
      
      // Allow listing
      allow list: if true;
    }
    
    // Media folder - authenticated users can read, write, and delete
    match /media/{allMedia=**} {
      allow read: if true;
      allow write: if request.auth != null;
      allow delete: if request.auth != null;
    }
  }
}
