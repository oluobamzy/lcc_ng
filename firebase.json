{
  "hosting": {
    "public": "dist",
    "ignore": [
      "firebase.json",
      "**/.*",
      "**/node_modules/**"
    ],
    "rewrites": [
      {
        "source": "**",
        "destination": "/index.html"
      }
    ]
  },
  "firestore": {
    "rules": "firestore.rules"
  },
  "storage": {
    "rules": "storage.rules",
    "cors": [
      {
        "origin": [
          "http://localhost:5173", 
          "http://localhost:3000", 
          "https://lccinternational.org",
          "*"
        ],
        "method": [
          "GET", 
          "PUT", 
          "POST", 
          "DELETE", 
          "HEAD", 
          "OPTIONS"
        ],
        "maxAgeSeconds": 3600,
        "responseHeader": [
          "Content-Type", 
          "Content-Length",
          "Content-Disposition",
          "Content-Encoding",
          "Content-Range",
          "Content-Location",
          "Cache-Control",
          "Authorization",
          "Access-Control-Allow-Origin",
          "X-Requested-With",
          "Firebase-Storage-Resumable-Upload-Protocol", 
          "X-Firebase-Auth-Token"
        ]
      }
    ]
  },
  "functions": [
    {
      "source": "functions",
      "codebase": "default",
      "ignore": [
        "node_modules",
        ".git",
        "firebase-debug.log",
        "firebase-debug.*.log",
        "*.local"
      ],
      "predeploy": [
        "npm --prefix \"$RESOURCE_DIR\" run build"
      ]
    }
  ]
}
